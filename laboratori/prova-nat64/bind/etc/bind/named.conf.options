options {
    directory "/var/cache/bind";

    forwarders {
        8.8.8.8;
    };
    
    dns64 64:ff9b::/96 {
        clients { any; 
        };
    };

    allow-query { 127.0.0.1; 192.168.0.0/24; 192.169.0.0/24; 192.170.0.0/24; 192.171.0.0/24; };
    recursion yes;
    listen-on { 127.0.0.1; 192.168.0.3; };
};

