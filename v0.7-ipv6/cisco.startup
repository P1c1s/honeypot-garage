# set a static ip address on the point-to-point link
ip address add 2001:1:1:2901::/64 dev eth0      # Lan A
ip address add 2001:1:1:2902::/64 dev eth1      # Lan B
ip address add 2001:1:1:2903::/64 dev eth2      # Lan C


# set correct privileges for radvd.conf
chmod o-rw /etc/radvd.conf

# start the radvd service
systemctl start radvd


#inoltro pacchetti
ip route add default via fe80::200:ff:fe00:1101 dev eth3        # Lan I






