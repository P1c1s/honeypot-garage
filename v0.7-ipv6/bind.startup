ip address add 192.168.0.3/24 dev eth0

# a default router is selected
ip route add default via 192.168.0.1

# start dns server daemon
systemctl start bind9

# start ssh server
service ssh start
useradd -m -p $(perl -e 'print crypt($ARGV[0], "1Password!")' 'senior') senior
useradd -m -p $(perl -e 'print crypt($ARGV[0], "2Password!")' 'junior') junior


